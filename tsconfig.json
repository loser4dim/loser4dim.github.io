{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "strict"           : true,
    "noEmit"           : true,
    "module"           : "esnext",
    "moduleResolution" : "bundler",
    "resolveJsonModule": true,
    "isolatedModules"  : true,
    "jsx"              : "react-jsx",
    "esModuleInterop"  : true,
    "incremental"      : true,
    "plugins"          : [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "allowJs"     : true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next"
  ]
}
